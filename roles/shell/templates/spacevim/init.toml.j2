# SpaceVim dark-mode init.toml generated by Anarres via ansible
[options]
colorscheme = "{{ spacevim.colorscheme | d('zaibatsu') }}"
colorscheme_bg = "dark"
enable_guicolors = true
statusline_separator = "arrow"
statusline_iseparator = "arrow"
buffer_index_type = 4
enable_tabline_filetype_icon = true
# enable_statusline_mode = false

{# enable custom plugins #}
{% for plugin in spacevim.custom_plugins %}
[[custom_plugins]]
{% for key, value in plugin.items() -%}
{{ key }} = {{ value | to_json }}
{% endfor %}
{% endfor %}

[[layers]]
name = "autocomplete"
auto_completion_return_key_behavior = "complete"
auto_completion_tab_key_behavior = "smart"
autocomplete_method = "deoplete"

[[layers]]
name = "colorscheme"

{# enable other layers defined in vars #}
{% for layer in spacevim.layers %}
[[layers]]
{% for key, value in layer.items() -%}
{{ key }} = {{ value | to_json }}
{% endfor +%}
{% endfor %}
